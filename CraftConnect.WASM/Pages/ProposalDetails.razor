@page "/proposals/{ProposalId:guid}"
@using Core.SharedKernel.DTOs
@using Core.SharedKernel.Enums
@using CraftConnect.WASM.Components.AvailableProjectsPageComponents
@using CraftConnect.WASM.Components.ProjectDetailsPageComponents
@using CraftConnect.WASM.Components.SubmittedProposalsListPageComponents
@using CraftConnect.WASM.ViewModels
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using System.Threading.Tasks
@inject NavigationManager NavigationManager
@inject IHttpClientFactory HttpClientFactory
@inject ILogger<ProposalDetails> Logger

@* <SubmittedPropsalsListNavbar /> *@

@if (isCustomer)
{
    // Use Customer layout/navbar or generic one
    <DashboardNavbar /> 
}
else
{
    <SubmittedPropsalsListNavbar />
}


@if (isLoading)
{
    <p class="loading-text">Loading proposal details...</p>
}
else if (errorMessage != null)
{
    <div class="alert alert-danger">@errorMessage</div>
    <button class="btn btn-secondary mt-3" @onclick="GoBack">Go Back</button>
}
else if (proposal != null)
{
    <div class="details-page-container">
        <!-- Header -->
        <header class="details-page-header">
            <button class="back-button" @onclick="GoBack">
                <i class="bi bi-arrow-left"></i>
            </button>
            <h1>Proposal Details</h1>
        </header>

        <div class="details-layout">
            <!-- Main Content -->
            <div class="main-content">
                <div class="card">
                    <div class="card-header">
                        <h2>Proposed Solution</h2>
                        <StatusBadge Status="proposal.Status" />
                    </div>

                    <p class="solution-text">@proposal.ProposedSolution</p>

                    <div class="info-grid">
                        <div>
                            <span class="info-label">Pricing</span>
                            <span class="info-value">@proposal.Pricing.ToString("C0")</span>
                            <span class="info-tag">@proposal.PricingType</span>
                        </div>
                        <div>
                            <span class="info-label">Estimated Timeline</span>
                            <span class="info-value">@proposal.EstimatedTimeline</span>
                        </div>
                    </div>

                    @if (proposal.Document != null && !string.IsNullOrEmpty(proposal.Document.FileName))
                    {
                        <h3 class="attached-title">Attached Documents</h3>
                        <DocumentRow Document="@proposal.Document" />
                    }
                </div>
            </div>

            <!-- Sidebar -->
            <aside class="sidebar">
                <!-- Only show Project Details if viewing as Craftsman -->
                @if (!isCustomer)
                {
                    <ProjectDetailsCard Project="@proposal.ProjectDetails" />
                }
                else
                {
                     <!-- If Customer, maybe show Craftsman Profile Summary instead? -->
                     <div class="card mb-3">
                         <h3>Craftsman</h3>
                         <div class="d-flex align-items-center gap-2">
                             <div class="avatar-circle px-2">@proposal.ProjectDetails.Client.AvatarInitials</div>
                             <div>
                                 <strong>@proposal.ProjectDetails.Client.Name</strong>
                                 <br/>
                                 <small class="text-muted">Member since @proposal.ProjectDetails.Client.MemberSince.Year</small>
                             </div>
                         </div>
                     </div>
                }

                <!-- Actions Card -->
                <div class="actions-card card">
                    <h3>Actions</h3>
                    
                    @if (isCustomer) 
                    {
                        <!-- CUSTOMER ACTIONS -->
                        @if(proposal.Status == ProposalStatus.Pending)
                        {
                            <button class="btn btn-primary w-100 mb-2" @onclick="AcceptProposal" disabled="@isProcessing">
                                @(isProcessing ? "Processing..." : "Accept Proposal")
                            </button>
                            <button class="btn btn-outline-danger w-100" @onclick="RejectProposal" disabled="@isProcessing">
                                Reject
                            </button>
                        }
                        else
                        {
                            <p class="text-muted">This proposal has been @proposal.Status.</p>
                        }
                    }
                    else 
                    {
                        <!-- CRAFTSMAN ACTIONS -->
                        @if (proposal.Status == ProposalStatus.Pending)
                        {
                            <button class="btn btn-outline-danger w-100 mb-2" @onclick="WithdrawProposal" disabled="@isProcessing">
                                @(isProcessing ? "Withdrawing..." : "Withdraw Proposal")
                            </button>
                            <button class="btn btn-secondary w-100">Edit Proposal</button>
                        }
                        else
                        {
                            <p class="text-muted">This proposal is @proposal.Status and cannot be modified.</p>
                        }
                    }
                </div>
            </aside>
        </div>
    </div>
}

@code {
    [CascadingParameter]
    public Task<AuthenticationState> AuthenticationState { get; set; } = default!;

    [Parameter]
    public Guid ProposalId { get; set; }

    public Guid CurrentUserId { get; set; }
    private CraftsmanProposalResponseDTO? CraftsmanProposal { get; set; } = new();
    private ProposalVM? proposal;
    private bool isLoading = true;
    private bool isProcessing = false;
    private bool isCustomer = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationState;
        var user = authState.User;

        if (user.Identity == null || !user.Identity.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/login");
            return;
        }

        var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        var roleClaim = user.FindFirst(ClaimTypes.Role)?.Value;
        if (Guid.TryParse(userIdClaim, out var id))
        {
            CurrentUserId = id;
            isCustomer = roleClaim == "Customer";
            await LoadProposalAsync();
        }
    }

    private async Task LoadProposalAsync()
    {
        try
        {
            var client = HttpClientFactory.CreateClient("BFF");
            CraftsmanProposal = await client.GetFromJsonAsync<CraftsmanProposalResponseDTO>($"/craftsmanproposals/{ProposalId}");

            if (CraftsmanProposal != null)
            {
                proposal = await MapToVM(CraftsmanProposal);
            }
            else
            {
                errorMessage = "Proposal not found.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError($"Error loading proposal: {ex.Message}");
            errorMessage = "Failed to load proposal details.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task WithdrawProposal()
    {
        if (isProcessing) return;
        isProcessing = true;

        try
        {
            var client = HttpClientFactory.CreateClient("BFF");
            var response = await client.PostAsync($"/craftsmanproposals/{ProposalId}/withdraw", null);

            if (response.IsSuccessStatusCode)
            {
                // Reload to show updated status
                await LoadProposalAsync();
            }
            else
            {
                // Show error toast
            }
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task AcceptProposal()
    {
        if (isProcessing) return;
        isProcessing = true;
        try
        {
            var client = HttpClientFactory.CreateClient("BFF");
            var url = $"/customerprojects/{CraftsmanProposal!.ProjectId}/proposals/{ProposalId}/accept";
            var response = await client.PostAsync(url, null);
            if (response.IsSuccessStatusCode) await LoadProposalAsync();
        }
        finally { isProcessing = false; }
    }

    private async Task RejectProposal()
    {
        if (isProcessing) return;
        isProcessing = true;
        try
        {
            var client = HttpClientFactory.CreateClient("BFF");
            var url = $"/customerprojects/{CraftsmanProposal!.ProjectId}/proposals/{ProposalId}/reject";
            var response = await client.PostAsync(url, null);
            if (response.IsSuccessStatusCode) await LoadProposalAsync();
        }
        finally { isProcessing = false; }
    }

    private async Task<ProposalVM> MapToVM(CraftsmanProposalResponseDTO dto)
    {
        var client = HttpClientFactory.CreateClient("BFF");
        var user = await client.GetFromJsonAsync<CraftmanResponseDTO>($"/users/craftsman/{dto.CraftsmanId}");
        return new ProposalVM
        {
            Id = dto.Id,
            ProjectTitle = dto.ProjectTitle ?? "Project Details",
            Status = Enum.Parse<ProposalStatus>(dto.StatusName, true),
            ProposedSolution = dto.CoverLetter,
            Pricing = dto.Price.Amount,
            PricingType = RateType.FixedPrice,
            SubmittedDate = dto.SubmittedDate,
            EstimatedTimeline = $"{dto.ProposedTimeline.Start:MMM d} - {dto.ProposedTimeline.End:MMM d}",
            ProjectDetails = new ProjectVM
            {
                Id = 0,
                Title = dto.ProjectTitle ?? "Unknown Project",
                PostedDate = dto.ProposedTimeline.Start,
                Client = new ClientVM 
                { 
                    Name = string.Join(" ", user!.FirstName, user!.LastName),
                    MemberSince = user!.CreatedAtUtc,
                    AvatarInitials = $"{user!.FirstName[0]}{user!.LastName[0]}"
                }
            }
        };
    }

    private void GoBack()
    {
        if (isCustomer)
        {
            NavigationManager.NavigateTo($"/customer/{CurrentUserId}/dashboard");
        }
        else
        {
            NavigationManager.NavigateTo($"/craftsman/{CurrentUserId}/proposals");
        }
    }
}