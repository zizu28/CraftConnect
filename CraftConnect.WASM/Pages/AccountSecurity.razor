@page "/settings/security"
@layout SettingsLayout
@using CraftConnect.WASM
@using CraftConnect.WASM.Components.AccountSecurityPageComponents
@using CraftConnect.WASM.ViewModels

<h1>Account Security</h1>

<!-- Change Password -->
<div class="settings-card">
    <EditForm Model="passwordModel" OnValidSubmit="HandlePasswordChange">
        <DataAnnotationsValidator />
        
        <h2>Change Password</h2>
        <div class="form-row">
            <div class="form-group">
                <label for="current-password">Current Password</label>
                <InputText id="current-password" type="password" class="form-control" @bind-Value="passwordModel.CurrentPassword" />
                <ValidationMessage For="@(() => passwordModel.CurrentPassword)" />
            </div>
        </div>
        <div class="form-row split-2">
            <div class="form-group">
                <label for="new-password">New Password</label>
                <InputText id="new-password" type="password" class="form-control" @bind-Value="passwordModel.NewPassword" />
                <ValidationMessage For="@(() => passwordModel.NewPassword)" />
            </div>
            <div class="form-group">
                <label for="confirm-password">Confirm New Password</label>
                <InputText id="confirm-password" type="password" class="form-control" @bind-Value="passwordModel.ConfirmPassword" />
                <ValidationMessage For="@(() => passwordModel.ConfirmPassword)" />
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update Password</button>
        </div>
    </EditForm>
</div>

<!-- Two-Factor Authentication -->
<div class="settings-card">
    <h2>Two-Factor Authentication</h2>
    <div class="tfa-row">
        <div>
            <p class="tfa-desc">Protect your account with an extra layer of security.</p>
            <span class="status-text">Status: <strong>@(isTfaEnabled ? "Enabled" : "Disabled")</strong> (Authenticator App)</span>
        </div>
        <div class="tfa-actions">
            <CustomToggleSwitch @bind-Value="isTfaEnabled" />
            <button class="btn btn-secondary" @onclick="ManageTfa">Manage</button>
        </div>
    </div>
</div>

<!-- Recent Login Activity -->
<div class="settings-card">
    <div class="card-header">
        <h2>Recent Login Activity</h2>
        <a href="#" class="header-link">Sign out of all other sessions</a>
    </div>
    <div class="table-container">
        <table class="activity-table">
            <thead>
                <tr>
                    <th>Device</th>
                    <th>Location</th>
                    <th>Time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in loginHistory)
                {
                    <tr>
                        <td>
                            <i class="bi @(item.DeviceIcon == "desktop" ? "bi-pc-display" : "bi-phone")"></i>
                            @item.Device
                        </td>
                        <td>@item.Location</td>
                        <td>@item.Time.ToString("MMM dd, yyyy, hh:mm tt")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Linked Devices -->
<div class="settings-card">
    <h2>Linked Devices</h2>
    <div class="list-container">
        @foreach (var device in linkedDevices)
        {
            <div class="list-item">
                <i class="device-icon bi @(device.DeviceIcon == "desktop" ? "bi-pc-display" : "bi-phone")"></i>
                <div class="device-info">
                    <span class="device-name">@device.Device</span>
                    @if (device.IsActive)
                    {
                        <span class="device-status active">@device.Location - <strong>Active now</strong></span>
                    }
                    else
                    {
                        <span class="device-status">Last seen: @device.Location - @device.LastSeen</span>
                    }
                </div>
                <button class="btn-remove">Remove</button>
            </div>
        }
    </div>
</div>

@code {
    private PasswordChangeModel passwordModel = new();
    private bool isTfaEnabled = true;
    private List<LoginHistoryItem> loginHistory = new();
    private List<LinkedDevice> linkedDevices = new();

    protected override void OnInitialized()
    {
        loginHistory = new List<LoginHistoryItem>
        {
            new LoginHistoryItem { Id = 1, Device = "Chrome on Windows", DeviceIcon = "desktop", Location = "New York, USA", Time = new DateTime(2025, 10, 26, 10, 30, 0) },
            new LoginHistoryItem { Id = 2, Device = "Safari on iOS", DeviceIcon = "mobile", Location = "London, UK", Time = new DateTime(2025, 10, 25, 17, 15, 0) },
            new LoginHistoryItem { Id = 3, Device = "Firefox on MacOS", DeviceIcon = "desktop", Location = "Paris, France", Time = new DateTime(2025, 10, 24, 9, 0, 0) }
        };

        linkedDevices = new List<LinkedDevice>
        {
            new LinkedDevice { Id = 1, Device = "Artisan's Desktop", DeviceIcon = "desktop", Location = "New York, USA", IsActive = true },
            new LinkedDevice { Id = 2, Device = "Artisan's iPhone", DeviceIcon = "mobile", Location = "London, UK", LastSeen = "2 days ago", IsActive = false }
        };
    }

    private void HandlePasswordChange()
    {
        // Add password change logic
        Console.WriteLine("Password change requested");
        passwordModel = new(); // Clear form
    }

    private void ManageTfa()
    {
        // Navigate to TFA management page
        Console.WriteLine("Manage TFA clicked");
    }
}