@page "/projects/{ProjectId:guid}"
@* @page "/customer/{Customerid:guid}/service-requests/{RequestId:guid}" *@
@layout CraftedMainLayout
@using Core.SharedKernel.DTOs
@using Core.SharedKernel.Enums
@using CraftConnect.WASM.Layout
@using CraftConnect.WASM.Components.ServiceRequestDetailsPageComponents
@using CraftConnect.WASM.ViewModels
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject NavigationManager NavigationManager
@inject ILoggerFactory LoggerFactory
@inject IHttpClientFactory HttpClientFactory

<div class="page-container">
    <!-- Breadcrumbs -->
    <nav class="breadcrumbs" aria-label="Breadcrumb">
        <ol>
            <li><a href="/">Home</a></li>
            @if (isOwnerOfProject)
            {
                <li><a href="/customer/service-requests">My Requests</a></li>
            }
            else
            {
                <li><a href="/projects/available">Available Projects</a></li>
            }
            <li><a href="#" aria-current="page">@request.ProjectTitle</a></li>
        </ol>
    </nav>

    <!-- Main Content Grid -->
    <div class="content-grid">
        <!-- Left Column: Request Details -->
        <div class="details-column">
            <header class="details-header">
                <h1 class="project-title">@request.ProjectTitle</h1>
                <span class="status-badge @(request.Status == ServiceRequestStatus.Open ? "status-open" : "status-closed")">
                    @request.Status.ToString()
                </span>
            </header>

            @if (isOwnerOfProject)
            {
                <div class="action-buttons">
                    <button class="btn btn-primary" @onclick="NavigateToEdit">Edit Request</button>
                    <button class="btn btn-secondary">Close Request</button>
                </div>
            }
            
            <div class="details-card">
                <div class="detail-item">
                    <label>Project Description</label>
                    <p>@request.Description</p>
                </div>
                <div class="detail-item">
                    <label>Skills Required</label>
                    <div class="skills-container">
                        @foreach (var skill in request.SkillsRequired)
                        {
                            <SkillTag SkillName="@skill" />
                        }
                    </div>
                </div>
                <div class="detail-item-inline">
                    <div class="detail-item">
                        <label>Budget</label>
                        <span>@request.Budget.ToString("C0")</span>
                    </div>
                    <div class="detail-item">
                        <label>Timeline</label>
                        <span>@request.StartDate.ToString("MMM d, yyyy") - @request.EndDate.ToString("MMM d, yyyy")</span>
                    </div>
                </div>
                <div class="detail-item">
                    <label>Attachments</label>
                    <div class="attachments-container">
                        @foreach (var attachment in request.Attachments)
                        {
                            <AttachmentLink Attachment="attachment" />
                        }
                    </div>
                </div>
                @if (!isOwnerOfProject && (request.Status == ServiceRequestStatus.AwaitingProposals || 
                                request.Status == ServiceRequestStatus.Open))
                {
                    <div class="craftsman-action-area mt-4">
                        <button class="btn btn-primary btn-lg" @onclick="NavigateToSubmitProposal">
                            Submit a Proposal
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- Right Column: Sidebar -->
        @if (isOwnerOfProject)
        {
            <aside class="sidebar-column">
                <div class="sidebar-tabs">
                    <button class="tab-item active">Proposals (@request.Proposals.Count)</button>
                    <button class="tab-item">Messages</button>
                    <button class="tab-item">Activity</button>
                </div>

                <div class="proposals-list">
                    @foreach (var proposal in request.Proposals)
                    {
                        <ProposalSidebarCard Proposal="proposal" ProjectId="ProjectId" />
                    }
                    @if (request.Proposals.Count == 0)
                    {
                        <p class="text-muted text-center py-3">No proposals yet.</p>
                    }
                </div>

                <div class="sidebar-cta">
                    <p>Waiting for more proposals? You can also invite craftsmen to your project.</p>
                    <button class="btn btn-secondary-cta"
                            @onclick="@(() => NavigationManager.NavigateTo("/find-craftmen"))">
                        Find Craftsmen
                    </button>
                </div>
            </aside>
        }
    </div>
</div>

@code {
    [CascadingParameter]
    public Task<AuthenticationState> AuthenticationState { get; set; } = default!;
    private ILogger Logger => LoggerFactory.CreateLogger<ServiceRequestDetails>();

    [Parameter]
    public Guid ProjectId { get; set; }

    public Guid CustomerId { get; set; }
    private string DisplayName { get; set; } = "User";

    private ServiceRequestVM request = new();
    public CustomerProjectResponseDTO? projectDto { get; set; } = new();
    private bool isLoading = false;
    private bool isOwnerOfProject = false;

    protected override async Task OnInitializedAsync()
    {
        if (isLoading) return;
        isLoading = true;
        var authState = await AuthenticationState;
        var user = authState.User;
        if (user.Identity == null || !user.Identity.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/login");
            return;
        }
        var customerIdClaim = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        var nameClaim = user.FindFirst(ClaimTypes.GivenName)?.Value ?? user.FindFirst(ClaimTypes.Name)?.Value;
        if (customerIdClaim != null) CustomerId = Guid.Parse(customerIdClaim);
        if (!string.IsNullOrEmpty(nameClaim))
        {
            DisplayName = nameClaim.Contains("@") ? nameClaim.Split('@')[0] : nameClaim;
        }

        try
        {
            var httpClient = HttpClientFactory.CreateClient("BFF");
            var response = await httpClient.GetAsync($"/customerprojects/{ProjectId}");
            var projectTask = httpClient.GetFromJsonAsync<CustomerProjectResponseDTO>($"/customerprojects/{ProjectId}");
            var proposalsTask = httpClient.GetFromJsonAsync<List<CraftsmanProposalResponseDTO>>($"/customerprojects/{ProjectId}/proposals");
            await Task.WhenAll(projectTask, proposalsTask);
            var projectDto = projectTask.Result;
            var proposalDtos = proposalsTask.Result;
            if (projectDto != null)
            {
                isOwnerOfProject = (projectDto.CustomerId == CustomerId);
                request = new ServiceRequestVM
                {
                    Id = projectDto.Id,
                    ProjectTitle = projectDto.Title,
                    Status = projectDto.Status,
                    Description = projectDto.Description,
                    SkillsRequired = projectDto.Skills.Select(s => s.Name).ToList(),
                    Budget = projectDto.Budget.Amount,
                    StartDate = projectDto.Timeline?.Start ?? DateTime.MinValue,
                    EndDate = projectDto.Timeline?.End ?? DateTime.MinValue,
                    Proposals = proposalDtos!.Select(p => new CustomerProposalVM
                    {
                        Id = p.Id,
                        CraftsmanName = p.CraftsmanName ?? "Unknown",
                        Price = p.Price.Amount,
                        QuoteSummary = p.CoverLetter,
                        CraftsmanAvatarUrl = GetOptimizedUrl(p.CraftsmanAvatarUrl),
                    }).ToList(),
                };
            }
            else
            {
                Logger.LogWarning("Project DTO is null for ProjectId: {ProjectId}", ProjectId);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "An error occurred while loading service request details.");
            // Handle error (e.g., show a message or redirect)
        }
        finally
        {
            isLoading = false;
        }            
    }

    private void NavigateToEdit()
    {
        if (isOwnerOfProject)
        {
            NavigationManager.NavigateTo($"/customer/{CustomerId}/edit-project/{ProjectId}");
        }
    }

    private string GetOptimizedUrl(string? originalUrl)
    {
        if (string.IsNullOrEmpty(originalUrl)) return "/images/user-avatar.png";
        return originalUrl.Replace("/upload/", "/upload/w_50,h_50,c_fill,g_face,q_auto,f_auto/");
    }

    private void NavigateToSubmitProposal()
    {
        NavigationManager.NavigateTo($"/proposal/create/{ProjectId}");
    }
}
