@page "/customer/{CustomerId:guid}/project-history"
@layout ProjectHistoryLayout
@inject NavigationManager NavigationManager
@using CraftConnect.WASM.Components.CustomerProjectHistoryPageComponents
@using CraftConnect.WASM.ViewModels

<div class="project-history-page">
    <h1 class="page-title">My Project History</h1>

    <!-- Filter/Search Bar -->
    <div class="filter-bar">
        <div class="search-container">
            <i class="bi bi-search search-icon"></i>
            <input type="text" class="search-input" placeholder="Search by project or craftsman..." />
        </div>

        <div class="dropdown-filters">
            <!-- Craftsman Filter -->
            <div class="filter-dropdown">
                <select id="craftsmanFilter" class="form-select">
                    <option value="0">Filter by Craftsman</option>
                    <option value="1">Jane Doe</option>
                    <option value="2">John Smith</option>
                </select>
                <i class="bi bi-chevron-down dropdown-arrow"></i>
            </div>

            <!-- Date Filter -->
            <div class="filter-dropdown">
                <select id="dateFilter" class="form-select">
                    <option value="0">Sort by Date</option>
                    <option value="1">Newest First</option>
                    <option value="2">Oldest First</option>
                </select>
                <i class="bi bi-chevron-down dropdown-arrow"></i>
            </div>
        </div>
    </div>

    <!-- Project List -->
    <div class="project-list">
        @if (projects.Any())
        {
            @foreach (var project in projects)
            {
                <CustomerProjectHistoryCard Project="project" />
            }
        }
        else
        {
            <!-- Empty State -->
            <div class="empty-state-card">
                <div class="empty-icon-container">
                    <i class="bi bi-star-fill text-muted" style="font-size: 2rem;"></i>
                </div>
                <h3>No Completed Projects Yet</h3>
                <p>You haven't completed any projects with us yet. Start your journey today!</p>
                <button class="btn-find-craftsman"
                        @onclick="@(() => NavigationManager.NavigateTo("/find-craftmen"))">
                    Find a Craftsman
                </button>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <CustomerPaginationControl CurrentPage="currentPage" TotalPages="totalPages" OnPageChanged="OnPageSelected" />
    }
</div>

@code {
    [Parameter] public Guid CustomerId { get; set; } = new();
    private List<ProjectHistoryItemVM> projects = new();
    private int currentPage = 1;
    private int totalPages = 1;

    protected override void OnInitialized()
    {
        // Mock data initialization (Same as before)
        projects = new List<ProjectHistoryItemVM> { /* ... */ };
    }

    private void OnPageSelected(int page) { currentPage = page; }
}