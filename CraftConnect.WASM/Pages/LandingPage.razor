@page "/"
@layout LandingLayout
@using CraftConnect.WASM.Components.LandingPageComponents
@using CraftConnect.WASM.Layout
@using CraftConnect.WASM.ViewModels

<!-- 1. Navigation -->
<LandingNav />

<!-- 2. Hero Section -->
<div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1>Connect with Skilled Craftsmen</h1>
        <p>Find the perfect craftsman for your project or showcase your skills to a wider audience.</p>
        <div class="hero-buttons">
            <a href="/signup" class="btn btn-primary-light">Join as a Craftsman</a>
            <a href="/find-craftmen" class="btn btn-secondary-light">Find a Craftsman</a>
        </div>
    </div>
</div>

<div class="page-content">
    <!-- 3. "For Craftsmen" Section -->
    <section class="features-section">
        <h2>For Craftsmen</h2>
        <p class="section-subtitle">Expand your reach and grow your business with CraftConnect.</p>
        <div class="features-grid">
            @foreach (var item in craftsmanFeatures)
            {
                <FeatureCard Feature="item" />
            }
        </div>
    </section>

    <!-- 4. "For Customers" Section -->
    <section class="features-section customer-section">
        <h2>For Customers</h2>
        <p class="section-subtitle">Find skilled craftsmen and bring your ideas to life with CraftConnect.</p>
        <div class="features-grid">
            @foreach (var item in customerFeatures)
            {
                <FeatureCard Feature="item" />
            }
        </div>
    </section>

    <!-- 5. "Ready to Get Started?" CTA Section -->
    <section class="cta-section">
        <h2>Ready to Get Started?</h2>
        <p>Join CraftConnect today and connect with skilled craftsmen or find the perfect craftsmen for your project.</p>
        <a href="/signup" class="btn btn-primary-cta">Get Started Now</a>
    </section>
</div>

<!-- 6. Footer -->
<LandingFooter />

@code {
    private List<FeatureItem> craftsmanFeatures = new();
    private List<FeatureItem> customerFeatures = new();

    protected override void OnInitialized()
    {
        craftsmanFeatures = new List<FeatureItem>
        {
            new FeatureItem 
            {
                Title = "Showcase Your Skills",
                Description = "Create a detailed profile highlighting your expertise and past work.",
                IconClass = "bi bi-person-vcard"
            },
            new FeatureItem 
            {
                Title = "Connect with Clients",
                Description = "Receive project inquiries directly from potential clients.",
                IconClass = "bi bi-chat-left-text"
            },
            new FeatureItem 
            {
                Title = "Manage Your Projects",
                Description = "Track project progress and communicate effectively with clients.",
                IconClass = "bi bi-clipboard-check"
            }
        };

        customerFeatures = new List<FeatureItem>
        {
            new FeatureItem 
            {
                Title = "Find the Right Craftsman",
                Description = "Browse profiles and portfolios to find the perfect match for your project.",
                IconClass = "bi bi-people-fill"
            },
            new FeatureItem 
            {
                Title = "Collaborate Seamlessly",
                Description = "Communicate directly with craftsmen and track project progress.",
                IconClass = "bi bi-chat-dots"
            },
            new FeatureItem 
            {
                Title = "Rate and Review",
                Description = "Share your experience and help others find quality craftsmen.",
                IconClass = "bi bi-star-fill"
            }
        };
    }
}
