@page "/forgot-password"
@layout ForgotPasswordLayout
@inject IHttpClientFactory httpClientFactory
@inject ILoggerFactory LoggerFactory
@using System.ComponentModel.DataAnnotations
@using System.Threading.Tasks
@using CraftConnect.WASM.ViewModels

@if (showSuccessMessage)
{
    <div class="alert alert-success">
        If an account exists with that email, we have sent a password reset link. Please check your inbox (and spam folder).
    </div>
}
else
{
    <div class="forgot-password-card">
        <EditForm Model="model" OnValidSubmit="HandleSendResetLink">
            <DataAnnotationsValidator />

            <div class="card-header">
                <h2>Forgot Your Password?</h2>
                <p>Enter the email address associated with your account, and we'll send you a link to reset your password.</p>
            </div>

            <div class="form-group">
                <label for="email">Email Address</label>
                <InputText id="email" class="form-control" @bind-Value="model.Email" placeholder="you@example.com" />
                <ValidationMessage For="@(() => model.Email)" />
            </div>

            <button type="submit" class="btn btn-primary btn-block" disabled="@formSubmitted">

                @if (formSubmitted)
                {
                    <span class="spinner"></span>
                    <span>Sending Reset Link...</span>
                }
                else
                {
                    <span>Send Reset Link</span>
                }
            </button>

        </EditForm>

        <div class="back-to-login">
            <a href="/login">Back to Log In</a>
        </div>
    </div>
}


@code {
    private ForgotPasswordCommand model = new();
    private bool formSubmitted = false;
    private ILogger logger = default!;
    private string? errorMessage;
    private bool showSuccessMessage = false;

    protected override Task OnInitializedAsync()
    {
        logger = LoggerFactory.CreateLogger<ForgotPassword>();
        return base.OnInitializedAsync();
    }

    private async Task HandleSendResetLink()
    {
        if (formSubmitted) return;
        errorMessage = null;
        try
        {
            formSubmitted = true;
            // var httpClient = httpClientFactory.CreateClient("Backend");
            var httpClient = new HttpClient();
            httpClient.BaseAddress = new Uri("https://localhost:7235");
            var response = await httpClient.PostAsJsonAsync("/api/users/forgot-password", model);
            if (response.IsSuccessStatusCode)
            {
                showSuccessMessage = true;
                model = new();
                logger.LogInformation("Password reset link sent to: {Email}", model.Email);
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                errorMessage = string.IsNullOrEmpty(error) ? "Failed to send password reset link." : error;
                logger.LogWarning(errorMessage);
            }
        }
        catch(Exception ex)
        {
            logger.LogError(ex, "");
            errorMessage = "An error occurred. Please try again.";
        }
        finally
        {
            formSubmitted = false;
        }
    }
}