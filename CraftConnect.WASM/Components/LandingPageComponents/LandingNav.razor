@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<header class="landing-nav-header">
    <div class="nav-container">
        <a href="/" class="logo">
            <img src="/images/craftconnect-logo.png" alt="CraftConnect Logo" class="logo-img" />
            <span>CraftConnect</span>
        </a>

        <nav class="main-nav">
            <a href="/about" class="nav-link">About</a>
            <a href="/services" class="nav-link">Services</a>
            <a href="/contact" class="nav-link">Contact</a>
        </nav>

        <div class="nav-spacer"></div>

        <div class="auth-links">
            <a href="/login" class="btn-nav-secondary">Join Now</a>
            <a href="/find-craftsman" class="btn-nav-primary">Find Services</a>
        </div>

        <button class="hamburger-btn" @onclick="ToggleMenu" aria-label="Toggle navigation">
            <i class="bi @(isMenuOpen ? "bi-x-lg" : "bi-list")"></i>
        </button>
    </div>

    <div class="mobile-menu @(isMenuOpen ? "open" : "")">
        <a href="/about" @onclick="ToggleMenu">About</a>
        <a href="/services" @onclick="ToggleMenu">Services</a>
        <a href="/contact" @onclick="ToggleMenu">Contact</a>
    </div>
</header>

@code {
    private bool isMenuOpen = false;

    private void ToggleMenu()
    {
        isMenuOpen = !isMenuOpen;
    }
}