@using CraftConnect.WASM.ViewModels
<div class="gateway-card">
    <div class="gateway-icon">
        <i class="bi bi-credit-card" style="font-size: 1.5rem;"></i>
    </div>
    <div class="gateway-details">
        <h5>@Gateway.Name</h5>
        <p class="@(Gateway.IsConfigured ? "configured" : "not-configured")">
            API Key: @Gateway.ApiKey
        </p>
    </div>
    <div class="gateway-action">
        <AdminToggleSwitch IsEnabled="Gateway.IsEnabled" OnToggle="OnToggle" />
    </div>
</div>

@code {
    [Parameter]
    public AdminPaymentGateway Gateway { get; set; } = new();

    [Parameter]
    public EventCallback OnToggle { get; set; }
}