<div class="star-rating">
    @for (int i = 1; i <= 5; i++)
    {
        int starValue = i;
        <span class="star @(starValue <= currentRating ? "filled" : "") @(starValue <= hoverRating ? "hover" : "")"
              @onclick="() => SetRating(starValue)"
              @onmouseover="() => SetHoverRating(starValue)"
              @onmouseout="ClearHoverRating">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.116 3.527 1.257 5.273c.27 1.131-1.009 2.036-1.96 1.425L12 18.354l-4.61 2.735c-.95.562-2.23 0-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.75-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd" />
            </svg>
        </span>
    }
</div>

@code {
    private int currentRating = 0;
    private int hoverRating = 0;

    [Parameter]
    public int Rating
    {
        get => currentRating;
        set
        {
            if (currentRating == value) return;
            currentRating = value;
            RatingChanged.InvokeAsync(value);
        }
    }

    [Parameter]
    public EventCallback<int> RatingChanged { get; set; }

    private void SetRating(int value)
    {
        Rating = value;
    }

    private void SetHoverRating(int value)
    {
        hoverRating = value;
    }

    private void ClearHoverRating()
    {
        hoverRating = 0;
    }
}