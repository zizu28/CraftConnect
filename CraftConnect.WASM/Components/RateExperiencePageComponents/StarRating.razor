<div class="star-rating">
    @for (int i = 1; i <= 5; i++)
    {
        int starValue = i;
        <span class="star @(starValue <= currentRating ? "filled" : "") @(starValue <= hoverRating ? "hover" : "")"
              @onclick="() => SetRating(starValue)"
              @onmouseover="() => SetHoverRating(starValue)"
              @onmouseout="ClearHoverRating">
            <i class="bi bi-star-fill"></i>
        </span>
    }
</div>

@code {
    private int currentRating = 0;
    private int hoverRating = 0;

    [Parameter]
    public int Rating
    {
        get => currentRating;
        set
        {
            if (currentRating == value) return;
            currentRating = value;
            RatingChanged.InvokeAsync(value);
        }
    }

    [Parameter]
    public EventCallback<int> RatingChanged { get; set; }

    private void SetRating(int value)
    {
        Rating = value;
    }

    private void SetHoverRating(int value)
    {
        hoverRating = value;
    }

    private void ClearHoverRating()
    {
        hoverRating = 0;
    }
}