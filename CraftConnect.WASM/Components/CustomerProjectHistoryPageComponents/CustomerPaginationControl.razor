<nav class="pagination-nav-history" aria-label="Pagination">
    <a href="javascript:void(0)"
       class="page-link-history @(CurrentPage == 1 ? "disabled" : "")"
       @onclick="() => OnChangePage(CurrentPage - 1)">
        <i class="bi bi-chevron-left"></i>
    </a>

    <div class="page-numbers-history">
        @for (int i = 1; i <= TotalPages; i++)
        {
            var pageNumber = i;
            <a href="javascript:void(0)"
               class="page-link-history @(CurrentPage == pageNumber ? "active" : "")"
               @onclick="() => OnChangePage(pageNumber)">
                @pageNumber
            </a>
        }
    </div>

    <a href="javascript:void(0)"
       class="page-link-history @(CurrentPage == TotalPages ? "disabled" : "")"
       @onclick="() => OnChangePage(CurrentPage + 1)">
        <i class="bi bi-chevron-right"></i>
    </a>
</nav>

@code {
    [Parameter]
    public int CurrentPage { get; set; } = 1;

    [Parameter]
    public int TotalPages { get; set; } = 1;

    [Parameter]
    public EventCallback<int> OnPageChanged { get; set; }

    private async Task OnChangePage(int page)
    {
        if (page < 1 || page > TotalPages || page == CurrentPage)
        {
            return;
        }
        await OnPageChanged.InvokeAsync(page);
    }
}