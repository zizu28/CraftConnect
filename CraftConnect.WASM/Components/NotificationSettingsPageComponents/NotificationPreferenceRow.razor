<div class="pref-row">
    <div class="pref-content">
        <div class="pref-icon">
            @if (Icon == "message") {
                <i class="bi bi-chat-left-text-fill"></i>
            } else if (Icon == "document") {
                <i class="bi bi-file-earmark-text-fill"></i>
            } else if (Icon == "milestone") {
                <i class="bi bi-flag-fill"></i>
            } else if (Icon == "service") {
                <i class="bi bi-tools"></i>
            } else if (Icon == "payment") {
                <i class="bi bi-credit-card-fill"></i>
            }
        </div>
        <span class="pref-title">@Title</span>
    </div>
    <div class="pref-toggles">
        <CustomNotificationCheckbox @bind-Value="Email" Label="Email" />
        <CustomNotificationCheckbox @bind-Value="InApp" Label="In-App" />
        <CustomNotificationCheckbox @bind-Value="Push" Label="Push" />
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Icon { get; set; } // "message", "document", "milestone", "service", "payment"

    [Parameter] public bool Email { get; set; }
    [Parameter] public EventCallback<bool> EmailChanged { get; set; }
    [Parameter] public bool InApp { get; set; }
    [Parameter] public EventCallback<bool> InAppChanged { get; set; }
    [Parameter] public bool Push { get; set; }
    [Parameter] public EventCallback<bool> PushChanged { get; set; }
}