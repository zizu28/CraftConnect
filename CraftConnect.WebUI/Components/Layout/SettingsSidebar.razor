        </nav>
    </div>

    <div class="sidebar-bottom">
        <button class="logout-btn" @onclick="Logout">Logout</button>
    </div>
</aside>

@code {
    private void Logout()
    {
        // Add logout logic here
        NavigationManager.NavigateTo("/login");
    }
}