<div class="history-card">
    <div class="card-content">
        <div class="craftsman-info">
            <img class="avatar" src="@Project.CraftsmanAvatarUrl" alt="@Project.CraftsmanName" />
            <div class="info-stack">
                <span class="name">@Project.CraftsmanName</span>
                <span class="project-title">@Project.ProjectTitle</span>
                <span class="completed-date">Completed on: @Project.CompletedDate.ToString("MMMM dd, yyyy")</span>
            </div>
        </div>
        <p class="description">@Project.Description</p>
        <div class="card-actions">
            <button class="btn btn-details">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10 12.5a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
                    <path fill-rule="evenodd" d="M.664 10.59a1.651 1.651 0 0 1 0-1.18l.879-1.148a1.65 1.65 0 0 1 1.969-.608l.34.114A1.65 1.65 0 0 0 5.05 8.223l.54-1.217a1.65 1.65 0 0 1 1.58-1.074h.54a1.65 1.65 0 0 1 1.58 1.074l.54 1.217a1.65 1.65 0 0 0 1.212.874l.34-.114a1.65 1.65 0 0 1 1.969.608l.879 1.148a1.651 1.651 0 0 1 0 1.18l-.879 1.148a1.65 1.65 0 0 1-1.969.608l-.34-.114a1.65 1.65 0 0 0-1.212.874l-.54 1.217a1.65 1.65 0 0 1-1.58 1.074h-.54a1.65 1.65 0 0 1-1.58-1.074l-.54-1.217a1.65 1.65 0 0 0-1.212-.874l-.34.114a1.65 1.65 0 0 1-1.969-.608L.664 10.59Z" clip-rule="evenodd" />
                </svg>
                <span>View Details</span>
            </button>
            <button class="btn btn-contact">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M3.28 2.22a.75.75 0 0 0-1.06 1.06l14.5 14.5a.75.75 0 1 0 1.06-1.06l-1.745-1.745a10.029 10.029 0 0 0 3.3-4.632.75.75 0 0 0 0-.5c-1.583-3.483-4.654-6.002-8.25-6.002-1.764 0-3.407.59-4.79 1.579L3.28 2.22ZM7.5 7.5c0-1.38.86-2.554 2.067-2.923l.634.634a.75.75 0 0 0 1.06-1.06l-.633-.634A4.502 4.502 0 0 1 18.25 10c-1.583 3.483-4.654 6.002-8.25 6.002-1.207 0-2.34-.282-3.37-.778l-1.171 1.171a.75.75 0 1 0 1.06 1.06l1.17-1.17a10.029 10.029 0 0 0 2.24.44c3.596 0 6.667-2.519 8.25-6.002a.75.75 0 0 0 0-.5c-.322-.705-.69-1.382-1.103-2.022l-1.507 1.507a2.983 2.983 0 0 0-3.39-3.39L7.5 7.5Z" clip-rule="evenodd" />
                </svg>
                <span>Contact Again</span>
            </button>
        </div>
    </div>
    <div class="card-image">
        <img src="@Project.ImageUrl" alt="@Project.ProjectTitle" />
    </div>
</div>

@code {
    [Parameter]
    public ProjectHistoryItemVM Project { get; set; } = new();
}