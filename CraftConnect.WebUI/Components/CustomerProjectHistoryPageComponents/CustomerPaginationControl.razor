<nav class="pagination-nav-history" aria-label="Pagination">
    <a href="javascript:void(0)"
       class="page-link-history @(CurrentPage == 1 ? "disabled" : "")"
       @onclick="() => OnChangePage(CurrentPage - 1)">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 0 1-.02 1.06L8.832 10l3.938 3.71a.75.75 0 1 1-1.04 1.08l-4.5-4.25a.75.75 0 0 1 0-1.08l4.5-4.25a.75.75 0 0 1 1.06.02Z" clip-rule="evenodd" />
        </svg>
    </a>

    <div class="page-numbers-history">
        @for (int i = 1; i <= TotalPages; i++)
        {
            var pageNumber = i;
            <a href="javascript:void(0)"
               class="page-link-history @(CurrentPage == pageNumber ? "active" : "")"
               @onclick="() => OnChangePage(pageNumber)">
                @pageNumber
            </a>
        }
    </div>

    <a href="javascript:void(0)"
       class="page-link-history @(CurrentPage == TotalPages ? "disabled" : "")"
       @onclick="() => OnChangePage(CurrentPage + 1)">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 0 1 .02-1.06L11.168 10 7.23 6.29a.75.75 0 1 1 1.04-1.08l4.5 4.25a.75.75 0 0 1 0 1.08l-4.5 4.25a.75.75 0 0 1-1.06-.02Z" clip-rule="evenodd" />
        </svg>
    </a>
</nav>

@code {
    [Parameter]
    public int CurrentPage { get; set; } = 1;

    [Parameter]
    public int TotalPages { get; set; } = 1;

    [Parameter]
    public EventCallback<int> OnPageChanged { get; set; }

    private async Task OnChangePage(int page)
    {
        if (page < 1 || page > TotalPages || page == CurrentPage)
        {
            return;
        }
        await OnPageChanged.InvokeAsync(page);
    }
}