        // var bookingsResponse = await bookingsClient.PostAsJsonAsync("", ProjectData);
        // bookingsResponse.EnsureSuccessStatusCode();
        Console.WriteLine("Project submitted successfully!");
        NavigationManager.NavigateTo("/");
    }
}
