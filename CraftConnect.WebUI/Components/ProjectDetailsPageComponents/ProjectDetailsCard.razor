<div class="card project-details-card">
    <h2 class="card-header">Project Details</h2>

    <span class="detail-label">Project Title</span>
    <p class="detail-value">@Project.Title</p>

    <span class="detail-label">Client</span>
    <div class="client-info">
        <div class="client-avatar">@Project.Client.AvatarInitials</div>
        <div>
            <span class="client-name">@Project.Client.Name</span>
            <span class="client-meta">Member since @Project.Client.MemberSince.ToString("yyyy")</span>
        </div>
    </div>

    <span class="detail-label">Category</span>
    <p class="detail-value">@Project.Category</p>

    <span class="detail-label">Posted</span>
    <p class="detail-value">@Project.PostedDate.ToString("MMMM dd, yyyy")</p>

    <a href="@Project.OriginalListingUrl" class="project-link-button" target="_blank">
        View Original Project Listing
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
        </svg>
    </a>
</div>

@code {
    [Parameter]
    public ProjectVM Project { get; set; }
}
