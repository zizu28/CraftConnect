@* Components/ChatWindow.razor *@
<div class="chat-window-content">
    @foreach (var message in Messages)
    {
        <div class="message-row @(message.IsSentByCurrentUser ? "sent" : "received")">
            @if (!message.IsSentByCurrentUser)
            {
                <img src="/images/user-jane.jpg" alt="Partner Avatar" class="message-avatar" />
            }
            <div class="message-bubble">
                <p class="message-text">@message.Text</p>
                <span class="message-time">@message.Timestamp.ToString("h:mm tt")</span>
            </div>
            @if (message.IsSentByCurrentUser)
            {
                <img src="/images/user-john.jpg" alt="My Avatar" class="message-avatar" />
            }
        </div>
    }
</div>

@code {
    [Parameter]
    public List<MessageVM> Messages { get; set; } = new();
}